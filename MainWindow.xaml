<Window
    x:Class="AITUC.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:AITUC.Views"
    xmlns:vm="clr-namespace:AITUC.ViewModels"
    Title="Membership Manager"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Grid>
        <DockPanel>

            <!--  Navigation Bar  -->
            <StackPanel
                Width="200"
                Background="#2c3e50"
                DockPanel.Dock="Left"
                Orientation="Vertical">
                <Button
                    Margin="10"
                    Background="#34495e"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="LoginView"
                    Content="Login"
                    Foreground="White" />
                <Button
                    Margin="10"
                    Background="#34495e"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="MembersView"
                    Content="Members"
                    Foreground="White"
                    Visibility="{Binding CanRead, Converter={StaticResource BoolToVisibilityConverter}}" />
                <Button
                    Margin="10"
                    Background="#34495e"
                    Command="{Binding NavigateCommand}"
                    CommandParameter="UsersView"
                    Content="Users"
                    Foreground="White"
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}" />
            </StackPanel>

            <!--  Content Area  -->
            <ContentControl Content="{Binding CurrentView}" />
        </DockPanel>
    </Grid>
</Window>
