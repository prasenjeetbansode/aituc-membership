<UserControl
    x:Class="AITUC.Views.MembersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AITUC.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:AITUC.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <vm:MembersViewModel />
    </UserControl.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock
            Margin="0,0,0,10"
            FontSize="20"
            FontWeight="Bold"
            Text="Members List" />

        <DataGrid
            Grid.Row="1"
            Margin="0,10,0,10"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            IsReadOnly="True"
            ItemsSource="{Binding Members}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding MemberID}"
                    Header="ID" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding MemberName}"
                    Header="Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Address}"
                    Header="Address" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding Mobile}"
                    Header="Mobile" />
                <DataGridTextColumn
                    Width="Auto"
                    Binding="{Binding CreatedDate}"
                    Header="Created Date" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel
            Grid.Row="2"
            Margin="0,10,0,0"
            Orientation="Horizontal">
            <TextBox
                Width="200"
                Margin="0,0,10,0"
                Text="{Binding NewMemberName, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox
                Width="200"
                Margin="0,0,10,0"
                Text="{Binding NewMemberAddress, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Command="{Binding AddMemberCommand}"
                Content="Add Member"
                IsEnabled="{Binding CanWrite}" />
        </StackPanel>
    </Grid>
</UserControl>
